<section class="middleSection">
      <div class="center container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Photo:</strong><br />
  <% if @product.has_photo? %>
    <%= image_tag @product.photo_path %>
  <% else %>
    No photo.
  <% end %>
</p>


<p>
   <strong>Number of Order:</strong>
   <%= @product.likes.count %>
<p>


<h3>Customers who ordered this product <%= @product.name %></h3>

<table>
  <tr>
    <th>Name</th>
  </tr>

  <% @product.likes.each do |e| %>
  <tr>
    <td><%= e.customer.name %></td>
  </tr>
  <% end %>
</table>
</br>
</br>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</div>
</section>
